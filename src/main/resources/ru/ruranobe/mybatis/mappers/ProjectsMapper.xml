<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ru.ruranobe.mybatis.mappers.ProjectsMapper">

    <!-- The only need for this cache is operation getProjectsByUrl -->
    <!--cache type="org.mybatis.caches.ehcache.EhcacheCache">
        <property name="timeToIdleSeconds" value="3600"/>
        <property name="timeToLiveSeconds" value="3600"/>
        <property name="maxEntriesLocalHeap" value="1000"/>
        <property name="memoryStoreEvictionPolicy" value="LRU"/>
    </cache-->

    <select id="getRootProjects" resultMap="ProjectResult">
        SELECT *
        FROM projects
        WHERE parent_id IS NULL
        ORDER BY order_number;
    </select>

    <select id="getAllProjects" resultMap="ProjectResult">
        SELECT *
        FROM projects
        ORDER BY order_number;
    </select>

    <select id="getProjectByUrl" parameterType="String" resultMap="ProjectResult">
        SELECT *
        FROM projects
        WHERE url = #{url}
    </select>

    <select id="getSubProjectsByParentProjectId" parameterType="Integer" resultMap="ProjectResult">
        SELECT *
        FROM projects
        WHERE parent_id = #{parentId}
        ORDER BY order_number;
    </select>

    <insert id="insertProject" parameterType="ru.ruranobe.mybatis.tables.Project" keyProperty="projectId"
            useGeneratedKeys="true">
        INSERT INTO projects (parent_id, image_id, url, name_jp, name_en, name_ru, name_romaji,
        author, illustrator, order_number, banner_hidden, project_hidden, onevolume, franchise, annotation, title)
        VALUES
        (#{parentId}, #{imageId}, #{url}, #{nameJp}, #{nameEn}, #{nameRu}, #{nameRomaji}, #{author}, #{illustrator},
        #{orderNumber}, #{bannerHidden}, #{projectHidden}, #{onevolume}, #{franchise}, #{annotation}, #{title})
    </insert>

    <update id="updateProject" parameterType="ru.ruranobe.mybatis.tables.Project">
        UPDATE projects
        SET
        parent_id = #{parentId},
        image_id = #{imageId},
        url = #{url},
        title = #{title},
        name_jp = #{nameJp},
        name_en = #{nameEn},
        name_ru = #{nameRu},
        name_romaji = #{nameRomaji},
        author = #{author},
        illustrator = #{illustrator},
        order_number = #{orderNumber},
        banner_hidden = #{bannerHidden},
        project_hidden = #{projectHidden},
        onevolume = #{onevolume},
        franchise = #{franchise},
        annotation = #{annotation}
        WHERE project_id = #{projectId}
    </update>

    <delete id="deleteProject" parameterType="int">
        DELETE FROM projects
        WHERE project_id = #{projectId}
    </delete>

    <resultMap type="ru.ruranobe.mybatis.tables.Project" id="ProjectResult">
        <id property="projectId" column="project_id"/>
        <result property="parentId" column="parent_id"/>
        <result property="imageId" column="image_id"/>
        <result property="url" column="url"/>
        <result property="nameJp" column="name_jp"/>
        <result property="nameEn" column="name_en"/>
        <result property="nameRu" column="name_ru"/>
        <result property="nameRomaji" column="name_romaji"/>
        <result property="author" column="author"/>
        <result property="illustrator" column="illustrator"/>
        <result property="orderNumber" column="order_number"/>
        <result property="bannerHidden" column="banner_hidden" javaType="java.lang.Boolean"/>
        <result property="projectHidden" column="project_hidden" javaType="java.lang.Boolean"/>
        <result property="onevolume" column="onevolume" javaType="java.lang.Boolean"/>
        <result property="franchise" column="franchise"/>
        <result property="annotation" column="annotation"/>
    </resultMap>

