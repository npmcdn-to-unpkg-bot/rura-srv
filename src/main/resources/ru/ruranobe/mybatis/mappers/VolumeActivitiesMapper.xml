<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ru.ruranobe.mybatis.mappers.VolumeActivitiesMapper">

    <select id="getVolumeActivityById" parameterType="int" resultMap="VolumeActivityResult">
        SELECT *
        FROM volume_activities
        WHERE activity_id = #{activityId}
    </select>

    <select id="getAllVolumeActivities" resultMap="VolumeActivityResult">
        SELECT *
        FROM volume_activities
        order by activity_id asc
    </select>

    <insert id="insertVolumeActivity" parameterType="ru.ruranobe.mybatis.tables.VolumeActivity" keyProperty="activityId" useGeneratedKeys="true">
        insert into volume_activities (activity_name, activity_type)
        values (#{activityName}, #{activityType})
    </insert>

    <delete id="deleteVolumeActivity" parameterType="int">
        delete from volume_activities where activity_id=#{activityId}
    </delete>

    <update id="updateVolumeActivity" parameterType="ru.ruranobe.mybatis.tables.VolumeActivity">
        update volume_activities set activity_name = #{activityName}, activity_type=#{activityType}
        where activity_id=#{activityId}
    </update>

    <resultMap type="ru.ruranobe.mybatis.tables.VolumeActivity" id="VolumeActivityResult">
        <id property="activityId" column="activity_id"/>
        <result property="activityName" column="activity_name"/>
        <result property="activityType" column="activity_type"/>
    </resultMap>

</mapper>
