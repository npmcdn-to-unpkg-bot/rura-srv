<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <package name="ru.ruranobe.mybatis.entities"/>
    </typeAliases>
    <typeHandlers>
        <typeHandler handler="ru.ruranobe.mybatis.handlers.UpperToLowerCaseEnumTypeHandler" javaType="ru.ruranobe.mybatis.entities.tables.Mode"/>
    </typeHandlers>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url"
                          value="jdbc:mysql://localhost:3306/ruranobe_test?characterEncoding=utf8&amp;autoReconnect=true"/>
                <property name="username" value="root"/>
                <property name="password" value=""/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="ru/ruranobe/mybatis/mappers/UsersMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/OrphusCommentsMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/ExternalResourcesMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/ExternalResourcesHistoryMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/ChapterImagesMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/ChaptersMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/ProjectsMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/TextsMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/VolumesMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/UpdatesMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/VolumeActivitiesMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/TeamsMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/TeamMembersMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/VolumeReleaseActivitiesMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/TextsHistoryMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/BookmarksMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/ChapterUrlDetailsMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/ParagraphsMapper.xml"/>
        <mapper resource="ru/ruranobe/mybatis/mappers/RolesMapper.xml"/>
    </mappers>
</configuration>