html
body 
  min-height 100%
  color #4d4d4d

aside 
  background-color white
  width 220px
  height 100%
  margin 0 auto

.example-block 
  margin-top 20px
  height 50px
  background-color rgb(242, 242, 242)

.radio
  *
    box-sizing border-box

  &__player
    height 40px
    
  &__title
    background-color #f2f2f2
    overflow-x hidden
    white-space nowrap
    text-overflow ellipsis
    width 147px
    height 40px
    padding 10px
    float left

  &__mpegurl-loader
    display: none
  
  &__volume-wrapper
    position relative
    width 33px
    height 40px
    float left
    
  &__volume
    background-color #e9e9e9
    text-align right
    width 33px
    height 40px
    padding 10px
    position absolute
    left 0
    transition-property left width
    transition-duration .2s
    overflow hidden
    
    &:hover
      width 180px
      left -147px
      
      [type="range"]
        left 10px
      
    [type="range"]
      position absolute
      left -137px
      width 132px
      transition-property left width
      transition-duration .2s
    
  &__play-button
    width 40px
    height 40px
    border none
    background rgb(96, 169, 212)
    position relative
    
    &__icon
      position absolute
      left 10px
      top 8px
      
      &, &:after
        height 24px
        display inline-block
        box-sizing border-box
        border-color transparent
        border-style solid
        border-left-color white
        border-top-width 6px
        border-bottom-width 6px
        border-left-width 10px
        border-right-width 0
        transition all .1s
        
      &:after
        content ""
        height 12px
        position absolute
        top 0
    
      &--stop
        &, &:after
          height 24px
          border-top-width 0
          border-bottom-width 0
          border-left-width 10px
          
  &__extra
    &__info
      width 100%
      background-color rgb(222, 222, 222)
      max-height 500px
      transition max-height 1s
      overflow hidden
      
      &__showname
        overflow-x hidden
        white-space nowrap
        text-overflow ellipsis
        font-weight bold
      
      &__inner
        padding 10px
      
      &--closed
        max-height 0
        overflow hidden
    
    &__expander
      display block
      width 100%
      height 9px
      background-color #338CB7
      padding-top 1
      border none
      position relative
      z-index 100
      transition background-color .2s
      
      &--disabled
        background-color #999
      
      span
        display block
        width 40px
        height 1px
        background-color #ccc
        margin 0 auto
        margin-bottom 1px
        
        
input[type=range] {
  -webkit-appearance: none;
  width: 100%;
  margin: 8px 0;
}
input[type=range]:focus {
  outline: none;
}
input[type=range]::-webkit-slider-runnable-track {
  width: 100%;
  height: 2px;
  cursor: pointer;
  box-shadow: 0px 0px 0px #222222, 0px 0px 0px #2f2f2f;
  background: #222222;
  border-radius: 1.3px;
  border: 0.2px solid #222222;
}
input[type=range]::-webkit-slider-thumb {
  box-shadow: 0px 0px 0px #000000, 0px 0px 0px #0d0d0d;
  border: 0px solid #000000;
  height: 20px;
  width: 8px;
  border-radius: 0px;
  background: #555555;
  cursor: pointer;
  -webkit-appearance: none;
  margin-top: -9.2px;
}
input[type=range]:focus::-webkit-slider-runnable-track {
  background: #252525;
}
input[type=range]::-moz-range-track {
  width: 100%;
  height: 2px;
  cursor: pointer;
  box-shadow: 0px 0px 0px #222222, 0px 0px 0px #2f2f2f;
  background: #222222;
  border-radius: 1.3px;
  border: 0.2px solid #222222;
}
input[type=range]::-moz-range-thumb {
  box-shadow: 0px 0px 0px #000000, 0px 0px 0px #0d0d0d;
  border: 0px solid #000000;
  height: 20px;
  width: 8px;
  border-radius: 0px;
  background: #555555;
  cursor: pointer;
}
input[type=range]::-ms-track {
  width: 100%;
  height: 4px;
  cursor: pointer;
  background: transparent;
  border-color: transparent;
  color: transparent;
}
input[type=range]::-ms-fill-lower {
  background: #1f1f1f;
  border: 0.2px solid #222222;
  border-radius: 2.6px;
  box-shadow: 0px 0px 0px #222222, 0px 0px 0px #2f2f2f;
}
input[type=range]::-ms-fill-upper {
  background: #222222;
  border: 0.2px solid #222222;
  border-radius: 2.6px;
  box-shadow: 0px 0px 0px #222222, 0px 0px 0px #2f2f2f;
}
input[type=range]::-ms-thumb {
  box-shadow: 0px 0px 0px #000000, 0px 0px 0px #0d0d0d;
  border: 0px solid #000000;
  height: 20px;
  width: 8px;
  border-radius: 0px;
  background: #555555;
  cursor: pointer;
  height: 2px;
}
input[type=range]:focus::-ms-fill-lower {
  background: #222222;
}
input[type=range]:focus::-ms-fill-upper {
  background: #252525;
}
